<div class="container mx-auto h-full bg-grey-lighter flex justify-center items-center">
  <div class="w-1/3">
    <h1 class="font-hairline font-bold mb-6 text-center">Sign Up</h1>
    <div class="border-teal p-8 border-t-12 bg-white mb-6 rounded-lg shadow-lg">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="mb-4">
          <%= f.input :username,
                      required: true,
                      input_html: { autocomplete: "Username", class: "block appearance-none w-full bg-blue-100 
                      border border-grey-light hover:border-grey px-2 py-2 rounded shadow" },
                      label_html: { class: "font-bold text-grey-darker block mb-2" } %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "Email", class: "block appearance-none w-full bg-blue-100 
                      border border-grey-light hover:border-grey px-2 py-2 rounded shadow" },
                      label_html: { class: "font-bold text-grey-darker block mb-2" } %>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "Password", class: "block appearance-none w-full bg-blue-100 
                      border border-grey-light hover:border-grey px-2 py-2 rounded shadow"},
                      label_html: { class: "font-bold text-grey-darker block mb-2" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "Password", class: "block appearance-none w-full bg-blue-100 
                      border border-grey-light hover:border-grey px-2 py-2 rounded shadow"},
                      label_html: { class: "font-bold text-grey-darker block mb-2" } %>
        </div>

        <div class="flex items-center justify-between">
          <%= f.button :submit, "Sign up", class: "bg-green-600 hover:bg-green-dark text-white font-bold py-2 px-4 rounded"%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
