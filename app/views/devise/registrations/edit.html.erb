<div class="container mx-auto h-full bg-grey-lighter flex justify-center items-center">
  <div class="w-1/3">
    <h1 class="font-hairline font-bold mb-6 text-center">Edit <%= resource_name.to_s.humanize %></h1>
    <div class="border-teal p-8 border-t-12 bg-white mb-6 rounded-lg shadow-lg">


      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= image_tag user_avatar(resource, 80), class: "rounded-full" %>
        <div class="mb-4">
          <%= f.input :email, 
                      required: true, 
                      autofocus: true,
                      input_html: { class: "block appearance-none w-full bg-blue-100 
                      border border-grey-light hover:border-grey px-2 py-2 rounded shadow" },
                      label_html: { class: "font-bold text-grey-darker block mb-2" } %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :username,
                      required: false,
                      input_html: { autocomplete: "Username", class: "block appearance-none w-full bg-blue-100 
                      border border-grey-light hover:border-grey px-2 py-2 rounded shadow" },
                      label_html: { class: "font-bold text-grey-darker block mb-2" } %>
          <%= f.input :password,
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "new-password", class: "block appearance-none w-full bg-blue-100 
                      border border-grey-light hover:border-grey px-2 py-2 rounded shadow" },
                      label_html: { class: "font-bold text-grey-darker block mb-2" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password", class: "block appearance-none w-full bg-blue-100 
                      border border-grey-light hover:border-grey px-2 py-2 rounded shadow" },
                      label_html: { class: "font-bold text-grey-darker block mb-2" } %>
          <%= f.input :current_password,
                      hint: "we need your current password to confirm your changes",
                      required: true,
                      input_html: { autocomplete: "current-password", class: "block appearance-none w-full bg-blue-100 
                      border border-grey-light hover:border-grey px-2 py-2 rounded shadow" },
                      label_html: { class: "font-bold text-grey-darker block mb-2" } %>
          <%= f.input :avatar, 
                      as: :file,
                      input_html: {class: "block appearance-none w-full bg-blue-100 
                      border border-grey-light hover:border-grey px-2 py-2 rounded shadow" },
                      label_html: { class: "font-bold text-grey-darker block mb-2" } %>
        </div>

        <div class="flex items-center justify-between">
          <%= f.button :submit, "Update", class: "bg-green-600 hover:bg-green-dark text-white font-bold py-2 px-4 rounded" %>
        </div>
      <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
