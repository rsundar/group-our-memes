<div class="container mx-auto h-full bg-grey-lighter flex justify-center items-center">
  <div class="w-1/3">
    <h1 class="font-hairline font-bold mb-6 text-center">Log In</h1>
    <div class="border-teal p-8 border-t-12 bg-white mb-6 rounded-lg shadow-lg">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-4">
          <%= f.input :login,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "Username or Email", class: "block appearance-none w-full bg-blue-100 
                      border border-grey-light hover:border-grey px-2 py-2 rounded shadow" }, 
                      label_html: { class: "font-bold text-grey-darker block mb-2" } %>
        </div>
        <div class="mb-4">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "block appearance-none w-full bg-blue-100 
                      border border-grey-light hover:border-grey px-2 py-2 rounded shadow"},
                      label_html: { class: "font-bold text-grey-darker block mb-2" } %>
        </div>
        <div class="flex items-center justify-between">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        
          <%= f.button :submit, "Log in", class: "bg-green-600 hover:bg-green-dark text-white font-bold py-2 px-4 rounded" %>

        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>