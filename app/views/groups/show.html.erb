<p id="notice"><%= notice %></p>

<div class="flex justify-between px-3 py-3 border-b-4 border-grey-400">
  <p class="w-1/3">
    <%= image_tag groups_icon(@group, size=40), size: "40x40", class: "rounded-full" %>
  </p>
  <p class="w-1/3 text-center text-xl text-bold">
    <strong>Name:</strong>
    <%= @group.name %>
  </p>
  <p class="w-1/3 text-right text-xl text-bold">
    <strong>Average Rating:</strong>
    <%= number_with_precision(@group.average_ratings, precision: 2) %>
  </p>
</div>


<div class="container mx-auto mt-12">
  <div class="flex justify-center w-full">
    <strong class="w-1/3 text-center text-4xl text-bold text-grey-800">Transactions</strong>
  </div>

  <div class="object-center mt-4">
    <%= render @transactions %>
  </div>
</div>


<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
