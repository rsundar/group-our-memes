<%= simple_form_for(@group) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="p-4 bg-white rounded-lg flex flex-col items-center">
    <div class="mt-2 mb-2">
      <%= f.input :name , input_html: { class: "block bg-blue-100 pr-10 border-grey-600 rounded-lg" }, label_html: { class: "text-grey-700 text-sm font-bold" } %>
      <%= f.input :icon, as: :file, input_html: { class: "block bg-blue-100 border-grey-600 rounded-lg" }, label_html: { class: "text-grey-700 text-sm font-bold" } %>
    </div>
    <div class="mb-2">
      <%= f.button :submit, class:"px-3 py-3 text-white bg-green-400" %>
    </div>
  </div>
<% end %>

