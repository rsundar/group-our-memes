<p id="notice"><%= notice %></p>

<div class="container mx-auto">
  <div class="flex flex-col justify-start">
    <div class="flex justify-center w-full mt-6">
      <strong class="w-1/3 text-center text-4xl text-bold text-grey-800">Transactions</strong>
    </div>
    <div class="object-center">
      <% @transactions.each do |transaction| %>
        <%= render "transaction", transaction: transaction %>
      <% end %>
    </div>
</div>
<footer class="flex justify-center mt-4">
  <%= button_to 'Create New Transaction', new_transaction_path, method: :get, class: "bg-green-400 px-12 py-8 text-xl text-white rounded" %>
</footer>
